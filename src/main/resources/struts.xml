<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>

    <package name="myPackage" extends="struts-default">

        <default-action-ref name="index" />

        <action name="index" class="com.openclassrooms.actions.IndexAction">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="helloWorld" class="com.openclassrooms.actions.HelloWorldAction">
            <result name="input">WEB-INF/jsp/index.jsp</result>
            <result>/WEB-INF/jsp/helloWorld.jsp</result>
        </action>

        <action name="book" class="com.openclassrooms.actions.BookAction">
            <result>/WEB-INF/jsp/booklist.jsp</result>
        </action>

        <action name="getAllBooks" class="com.openclassrooms.actions.BookAction" method="getAllBooks">
            <result>/WEB-INF/jsp/booklist.jsp</result>
        </action>

        <action name="findBookByTitle" class="com.openclassrooms.actions.BookAction" method="getBookByTitle">
            <result>/WEB-INF/jsp/booklist.jsp</result>
        </action>

        <action name="getAllAppUsers" class="com.openclassrooms.actions.AppUserAction" method="getAllAppUsers">
            <result>/WEB-INF/jsp/appuser.jsp</result>
        </action>

    </package>

</struts>
